.stacks
	padding: 2.5rem 0

	&__title
		font-size: 1.75rem
		font-weight: 400
		text-align: center

.stacks__list
	align-items: flex-start
	display: flex
	flex-direction: row
	flex-wrap: wrap
	justify-content: space-between
	margin-top: 1.25rem
	position: relative

	&__item
		border-radius: 6px
		color:$font-color
		flex: 0
		flex-basis: 25%
		max-width: 25%
		padding: 0 1rem 1rem
		text-align: center
		text-decoration: none

		&:hover
			background-color: #F9F9F9

		@media (max-width: $screen-md-max)
			flex-basis: 50%
			max-width: 50%


	&__logo
		align-items: center
		display: flex
		flex-direction: row
		height: 12rem
		justify-content: center
		width: 100%

	&__logo__img
		max-width: 60%
		max-height: 50%

	&__title
		font-size: 1.25rem
		font-weight: 400
		margin-top: -1rem

	&__byline
		color: rgba(0,0,0,0.8)
		margin-top: 0.6125rem
